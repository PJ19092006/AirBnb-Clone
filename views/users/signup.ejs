<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
  <h1 class="SignUp-h1 mb-2">SignUp on AirBnb</h1>
  <div class="col-6 offset-3">
    <form method="post" action="/signup" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          required
          placeholder="Enter a username"
          class="form-control"
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input name="email" class="form-control" required id="email" />
        <div class="invalid-feedback">Enter your Email</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          required
          placeholder="Enter password"
          class="form-control"
        />
        <div class="invalid-feedback">Enter a Password</div>
      </div>
      <button class="btn btn-success mb-3">SignUp</button>
    </form>
  </div>
</div>
