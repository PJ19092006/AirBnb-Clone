<% layout("/layouts/boilerplate") -%>
<div class="container">
  <h2>Search Results for "<%= searchResults %>"</h2>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mt-3">
    <% for(let result of results ){ %>
    <a href="/listings/<%= result._id %>" class="listing-link">
      <div class="col mb-4">
        <div class="card h-100 listing-card">
          <img
            src="<%= result.image.url %>"
            class="card-img-top"
            alt="listing-img"
            style="height: 20rem"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= result.title %></b>
              <br />
              &#8377; <%= result.price.toLocaleString("en-IN") %> / Night
              <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</div>
